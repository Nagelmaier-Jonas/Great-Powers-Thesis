@inject NavigationManager NavigationManager

<MudDialog Class="settings-dialog">
    <DialogContent>
        <MudText Class="fw-bold text-center mb-3 mt-5 noselect" Color="Color.Tertiary" Typo="Typo.h4">Simulations Menü</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Warning" OnClick="BackToMenu">Zurück zum Menü</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="ExitApp">Anwendung beenden</MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();

    void BackToMenu(){
        MudDialog.Close(DialogResult.Ok(true));
        NavigationManager.NavigateTo("/");
    }

    private void ExitApp(){
        Environment.Exit(0);
    }

}