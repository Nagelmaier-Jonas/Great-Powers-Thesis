@using Model.Entities

@if (Battle is not null){
    <MudDialog>
        <DialogContent>
            @Battle.Location.Name
        </DialogContent>
        <DialogActions>
        </DialogActions>
    </MudDialog>
}


@code {

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }
    
    [Parameter]
    public Battle? Battle { get; set; }

    async void Submit(){
        MudDialog.Close(DialogResult.Ok(true));
    }

    void Cancel() => MudDialog.Cancel();
}