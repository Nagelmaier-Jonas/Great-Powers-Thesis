@using Model.Entities.Units.Abstract
@using System.Drawing
@using System.Text
@using Model.Entities
@inject GameEngine GameEngine

@if (SessionInfo.Phase == EPhase.ConductCombat){
    return;
}
@foreach(var path in UnitPaths){
    <svg xmlns="http://www.w3.org/2000/svg" class="path-arrow">
        <defs>
            <marker id="arrow" viewBox="0 0 10 10" refX="5" refY="5"
                    markerWidth="4" markerHeight="4" orient="auto" fill="darkcyan">
                <path d="M 0 0 L 10 5 L 0 10 z"/>
            </marker>
        </defs>
        <path d="@path" stroke="darkcyan" fill="none" marker-end="url(#arrow)" stroke-width="4"/>
    </svg>
}

@code {

    [Parameter]
    public List<string>? UnitPaths { get; set; } = new ();

    [Parameter]
    public SessionInfo? SessionInfo { get; set; }
}