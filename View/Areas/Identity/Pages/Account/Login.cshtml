@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model LoginModel

@{
    Layout = "/Pages/_Layout.cshtml";
}
<style>
.paper-bg {
background-image: url("img/menu/paper-bg.jpg") !important;
}
.field-bg {
background-image: url("img/menu/field.png") !important;
background-size: cover !important;
}
input{
    background: transparent !important;
    color: white !important;
}
    
</style>

<section class="vh-100 paper-bg">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card field-bg text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <div>
                            <p class="mb-0 float-start">
                                <a href="/" class="fw-bold" style="color:#d33939;">
                                    <i class="fas fa-times"></i>
                                </a>
                            </p>
                        </div>
                        <div class="mb-md-5 mt-md-4 pb-5">

                            <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                            <p class="text-white-50 mb-5">Please enter your login and password!</p>

                            <form id="account" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Input.Email" id="email" class="form-control form-control-lg" autocomplete="username" aria-required="true"/>
                                    <label asp-for="Input.Email" for="email" class="form-label"></label>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Input.Password" id="pw" class="form-control form-control-lg" autocomplete="current-password" aria-required="true"/>
                                    <label asp-for="Input.Password" for="pw" class="form-label"></label>
                                </div>

                                <button id="login-submit" class="btn btn-outline-light btn-lg px-5" type="submit">Login</button>

                            </form>

                        </div>

                        <div>
                            <p class="mb-2">
                                Don't have an account? <a asp-page="./Register" class="text-white-50 fw-bold" asp-route-returnUrl="@Model.ReturnUrl">Sign Up</a>
                            </p>
                        </div>
                        <div>
                            <p class="mb-0">
                                <a href="/" class="text-white-50 fw-bold">Main Menu</a>
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}