@page "/OnlineMenu"
@inherits SidebarComponent
@using Model.Entities
@using Model.Configuration
@inject NavigationManager NavigationManager

<style>
    body {
        background-image: url('img/menu/paper-bg.jpg')
    }
</style>
<MudContainer Class="d-flex justify-content-center">
    <MudImage Class="menuImage" Src="img/menu/tank.jpg"/> 
</MudContainer>
@code {

    protected override void OnInitialized(){
        Items.Add(new SidebarItem(){
            Name = "Create",
            OnClick = () => NavigationManager.NavigateTo("/Create/false")
        });
        Items.Add(new SidebarItem(){
            Name = "Load",
            OnClick = () => NavigationManager.NavigateTo("/Load")
        });
        Items.Add(new SidebarItem(){
            Name = "Join",
            OnClick = () => NavigationManager.NavigateTo("/Join")
        });
        Items.Add(new SidebarItem(){
            Name = "MainMenu",
            Link = "/"
        });
        base.OnInitialized();
    }

}