@page "/Load"
@using Domain.Services
@inherits SidebarComponent
@inject DockerService DockerService

<style>
    body {
        background-image: url('img/paper-bg.jpg')
    }
</style>
<SaveStates DockerContainers="DockerContainer"/>

@code {

    private List<string> DockerContainer { get; set; } = new();

    protected override void OnInitialized(){
        DockerContainer = Directory.GetDirectories("../Databases").Select(x => x.Split('\\').Last()).ToList();
        DockerContainer.Remove("default");
        base.OnInitialized();
    }

}

