@page "/Load"
@using Model.Entities
@inherits SidebarComponent

<style>
    body {
        background-image: url('img/menu/paper-bg.jpg')
    }
</style>
<SaveStates DockerContainers="DockerContainer"/>

@code {

    private List<string> DockerContainer { get; set; } = new();

    protected override void OnInitialized(){
        var databasePath = Directory.GetParent(Environment.CurrentDirectory.Split("Great-Powers-Thesis")[0]) + "\\Great-Powers-Thesis\\Databases";
        DockerContainer = Directory.GetDirectories($"{databasePath}").Select(x => x.Split('\\').Last()).ToList();
        DockerContainer.Remove("default");
        Items.Add(new SidebarItem(){
            Name = "MainMenu",
            Link = "/"
        });
        base.OnInitialized();
    }

}

